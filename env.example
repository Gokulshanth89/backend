# Backend Environment Configuration
# Copy this file to .env and update with your values

# Server Configuration
PORT=5050

# Network IP Address
# Set this to your computer's network IP address (e.g., 192.168.8.163)
# This IP will be used for all API and Socket.io connections
# To find your IP:
#   Windows: ipconfig (look for IPv4 Address)
#   Mac/Linux: ifconfig or ip addr
#   Use the IP that's NOT 127.0.0.1 or localhost
NETWORK_IP=192.168.8.163

# Alternative: You can also use BACKEND_IP (same as NETWORK_IP)
# BACKEND_IP=192.168.8.163

# Frontend URL (for CORS and Socket.io)
FRONTEND_URL=http://localhost:3000

# Database
MONGODB_URI=mongodb://localhost:27017/hotel_management

# JWT Secret (CHANGE THIS IN PRODUCTION!)
JWT_SECRET=your-secret-key-change-this-in-production

# Node Environment
NODE_ENV=development

